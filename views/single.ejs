<%- include('./partials/nav.ejs') %>
    <article>
        <div class="galaxy">
            <img src="/images/merc.svg" class="merc">
            <img src="/images/red.svg" class="red">
            <img src="/images/Compass.png" class="compass ">
            <img src="/images/blue.svg" class="blue ">
            <img src="/images/jupiter.svg" class="jupiter">

        </div>
        <div class="cards-holder">
                
                    <div class="card">
                        <div class="opt">
                            <img src="/images/menu-dots-vertical.svg" class="options">
                        </div>
                        <form action="/submit/<%=singledata.id%>" method="post">
                            <input type="text" value="<%= singledata.title%>" class="title" id="title" name="title">
                            <input type="text" value="<%= singledata.description%>"  class="title" id="description" name="description">
                            <input type="text" value="<%= singledata.status%>" class="title" id="status" name="status">
                            <select id="priority" class="title"  name="priority" >
                                <option value="<%= singledata.priority%>"><%= singledata.priority%></option>
                                <option value="High">High</option>
                                <option value="Medium">Medium</option>
                                <option value="Low">Low</option>
                              </select>
                            <input type="date" value="<%= singledata.due_date%>" class="title" id="date" name="date">
                            <input type="submit" value="Submit Changes">
                        </form>
            
                    </div>

          
             
        </div>

    </article>
    
   
</body>
